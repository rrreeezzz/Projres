#!/bin/bash

echo -e "\033[31mInstallation du programme...\033[0m"

cd ./Client && make && cd ../server_lib && make && cd ../ui && gcc `pkg-config --cflags gtk+-3.0` ui.c -o ui `pkg-config --libs gtk+-3.0`

if test $? == 0
then
  echo -e "\033[31mProgramme install√© !\033[0m"
else
  echo -e "\033[31mErreur a l'installation !\033[0m"
fi
